# ==============================================================================
# Docker Environment Configuration
# ==============================================================================
# This file is used by docker-compose.yml
# Copy this to .env and fill in your values
#
# IMPORTANT: QDRANT_HOST is set to "qdrant" (service name) in docker-compose.yml
# ==============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Configuration (will be overridden in docker-compose.yml)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=normativa_sgr
QDRANT_USE_MEMORY=false

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=800

# Retrieval Configuration
TOP_K_RETRIEVAL=20
TOP_K_RERANK=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Re-ranking Model
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Paths (relative to container)
DATA_DIR=/app/data
STORAGE_DIR=/app/storage
